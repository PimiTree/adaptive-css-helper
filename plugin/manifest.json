{
    "manifest_version": 3,
    "name": "Adaptive Supporter",
    "version": "0.1.0",
    "description": "Saving times to create amazing adaptive-responsive layouts at your page",
    "devtools_page": "devTools/dev_tools.html",
    "action": {
        "default_icon": {
            "16": "icons/16.png",
            "32": "icons/32.png",
            "48": "icons/48.png",
            "128": "icons/128.png"
        },
        "default_title": "Adaptive Supporter",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "permissions": ["storage", "tabs", "scripting", "activeTab"],
    "content_scripts": [
    {
        "js": ["content_script.js"],
        "matches": [
            "*://localhost/freelance/volodimir/manicure/v1/*"
        ],
        "run_at": "document_end"
    }
]
   

}